---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { contentfulClient } from "../utils/contentful";
import type { Blog } from "../utils/contentful";

// Use Contentful if configured, otherwise use local static data
let posts: any[] = [];

if (contentfulClient) {
  const entries = await contentfulClient.getEntries<Blog>({
    content_type: "blog",
  });
  posts = entries.items.map((item) => {
    const { title, date, description, slug, featuredImage, category, author } = item.fields;
    return {
      title,
      slug,
      description,
      date: new Date(date).toLocaleDateString(),
      featuredImage: {
        src: featuredImage.fields.file.url,
        alt: featuredImage.fields.file.description || "alt",
      },
      category,
      author,
    };
  });
} else {
  // Use local static data from src/content/blog
  const publishedBlogEntries = await getCollection("blog", ({ data }) => {
    return !data.draft && data.publishDate < new Date();
  });

  // Sort content entries by publication date
  publishedBlogEntries.sort(function (a, b) {
    return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
  });

  posts = publishedBlogEntries.map((entry) => {
    const { title, publishDate, description, category, author, image } = entry.data;
    const { slug } = entry;
    return {
      title,
      slug,
      description,
      date: new Date(publishDate).toLocaleDateString(),
      featuredImage: image || { src: "", alt: description || "" },
      category,
      author,
    };
  });
}
---

<Layout title="Blog">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Our Blog</Fragment>
      <Fragment slot="desc">
        We write about building startups and thoughts going on our mind.
      </Fragment>
    </Sectionhead>
    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {
          posts.map((blogPostEntry, index) => (
            <li>
              <a href={`/blog/${blogPostEntry.slug}`}>
                <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                  {blogPostEntry.featuredImage.src ? (
                    <Picture
                      src={blogPostEntry.featuredImage.src}
                      alt={blogPostEntry.featuredImage.alt}
                      sizes="(max-width: 800px) 100vw, 800px"
                      width={800}
                      height={600}
                      loading={index <= 2 ? "eager" : "lazy"}
                      decoding={index <= 2 ? "sync" : "async"}
                      class="w-full rounded-md object-cover object-center bg-white"
                    />
                  ) : (
                    <div class="w-full aspect-[4/3] rounded-md bg-gray-200" />
                  )}
                  <div>
                    <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                      {blogPostEntry.category}
                    </span>

                    <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
                      {blogPostEntry.title}
                    </h2>

                    <div class="flex gap-2 mt-3">
                      <span class="text-gray-400">{blogPostEntry.author}</span>
                      <span class="text-gray-400">â€¢ </span>
                      <time class="text-gray-400" datetime={blogPostEntry.date}>
                        {blogPostEntry.date}
                      </time>
                    </div>
                  </div>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
